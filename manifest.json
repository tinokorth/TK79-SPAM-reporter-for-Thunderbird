{
  "manifest_version": 2,
  "name": "SPAM reporter for XCITING, SOPHOS and Microsoft365",
  "version": "1.0.0",
  "author": "Tino Korth",
  "description": "Forward emails directly through a dropdown of predefined recipients",
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesMove",
    "compose",
    "compose.send",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "message_display_action": {
    "default_icon": "icons/icons8-spam-16.png",
    "default_title": "report SPAM",
    "default_popup": "popup/chooseRecipient.html"
  },
  "icons": {
	"96": "icons/icons8-spam-96.png",	  
	"64": "icons/icons8-spam-64.png",
	"48": "icons/icons8-spam-48.png",
	"32": "icons/icons8-spam-32.png",
	"16": "icons/icons8-spam-16.png"	
  },
  "applications": {
    "gecko": {
      "id": "t.korth@gmail.com",
      "strict_min_version": "90.0"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}
